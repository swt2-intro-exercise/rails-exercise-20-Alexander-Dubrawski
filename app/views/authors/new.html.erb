<h1>New Author</h1>
<div>
    <%= form_with(scope: @author, url: authors_path) do |f| %>
        <p>
            <%= f.label :first_name %>
        </p>
        <p>
            <%= f.text_field :first_name %>
        </p>
        <p>
            <%= f.label :last_name %>
        </p>
        <p>
            <%= f.email_field :last_name %>
        </p>
        <p>
            <%= f.label :homepage %>
        </p>
        <p>
            <%= f.password_field :homepage %>
        </p>    
        <p>
            <%= f.submit :Save %>
        </p>    
    <% end %>
</div>